@page
@model WebApp.Pages.SavedGames

@{
    ViewData["Title"] = "Load game";
}

<div class="container text-center">
    <h1>Load Game</h1>
    <div class="list-group">
        @foreach (var save in Model.BattleShipsSaves)
        {
            <a asp-page="/PlayGame" class="list-group-item list-group-item-action" asp-route-id="@save.Id">@Model.CreateDisplayName(save)</a>
        }
    </div>
</div>

